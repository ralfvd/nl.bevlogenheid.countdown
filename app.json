{
  "id": "nl.bevlogenheid.countdown",
  "name": {
    "en": "CountDown",
    "nl": "CountDown"
  },
  "version": "3.0.4",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "description": {
    "en": "Use CountDown timers to control your flows",
    "nl": "Gebruik CountDown timers als zandloper om af te tellen naar een actie in een flow"
  },
  "author": {
    "name": "Ralf van Dooren",
    "email": "ralfvd@gmail.com"
  },
  "contributors": {
    "developers": [
      {
        "name": "Arie J. Godschalk",
        "email": "arie@qluster-it.nl"
      }
    ]
  },
  "tags": {
    "en": [
      "countdown",
      "timer",
      "timers"
    ],
    "nl": [
      "zandloper",
      "countdown",
      "timer",
      "tijd"
    ]
  },
  "contributing": {
    "donate": {
      "paypal": {
        "username": "ralfvd"
      }
    }
  },
  "bugs": {
    "url": "https://github.com/ralfvd/nl.bevlogenheid.countdown/issues"
  },
  "support": "mailto:ralfvd@gmail.com",
  "images": {
    "large": "./assets/images/large.jpg",
    "small": "./assets/images/small.jpg"
  },
  "category": [
    "tools"
  ],
  "brandColor": "#A1896E",
  "dependencies": {},
  "flow": {
    "triggers": [
      {
        "id": "countdown_to_zero",
        "title": {
          "en": "Timer reaches zero (0)",
          "nl": "Zandloper leeg"
        },
        "token": [
          {
            "name": "variable",
            "title": {
              "en": "Name timer",
              "nl": "Naam zandloper"
            }
          }
        ],
        "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "Countdown timer name",
              "nl": "Zandloper naam"
            }
          }
        ]
      },
      {
        "id": "countdown_started",
        "title": {
          "en": "Timer has started",
          "nl": "Zandloper is gestart"
        },
        "token": [
          {
            "name": "variable",
            "title": {
              "en": "Name timer",
              "nl": "Naam zandloper"
            }
          }
        ],
        "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "Countdown timer name",
              "nl": "Zandloper naam"
            }
          }
        ]
      },
      {
        "id": "countdown_updated",
        "title": {
          "en": "Timer has been updated",
          "nl": "Zandloper is bijgewerkt"
        },
        "token": [
          {
            "name": "variable",
            "title": {
              "en": "Name timer",
              "nl": "Naam zandloper"
