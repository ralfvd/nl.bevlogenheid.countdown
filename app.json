  "author": {
    "name": "Ralf van Dooren",
    "email": "ralfvd@gmail.com"
  },
  "contributors": {
    "developers": [
      {
        "name": "Arie J. Godschalk",
        "email": "arie@qluster-it.nl"
      }
    ]
  },
  "tags": {
    "en": [
      "countdowns",
      "timer",
      "timers",
      "transitions"
    ],
    "nl": [
      "zandloper",
      "countdowns",
      "timers",
      "tijd",
      "transities"
    ]
  },
  "contributing": {
    "donate": {
      "paypal": {
        "username": "ralfvd"
      }
    }
  },
  "bugs": {
    "url": "https://github.com/ralfvd/nl.bevlogenheid.countdown/issues"
  },
  "support": "mailto:ralfvd@gmail.com",
  "images": {
    "large": "./assets/images/large.jpg",
    "small": "./assets/images/small.jpg"
  },
  "category": [
    "tools"
  ],
  "brandColor": "#A1896E",
  "dependencies": {},
  "flow": {
    "triggers": [
      {
        "id": "countdown_to_zero",
        "title": {
          "en": "Timer reaches zero (0)",
          "nl": "Zandloper leeg"
        },
        "token": [
          {
            "name": "variable",
            "title": {
              "en": "Name timer",
              "nl": "Naam zandloper"
            }
          }
        ],
        "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "Countdown timer name",
              "nl": "Zandloper naam"
            }
          }
        ]
      },
      {
          "id": "countdown_reaches_number",
          "title": {
            "en": "Timer [[variable]] reaches [[value]] seconds",
            "nl": "Zandloper [[variable]] heeft nog [[value]] seconden"
          },
          "token": [
            {
              "name": "variable",
              "title": {
                "en": "Name timer",
                "nl": "Naam zandloper"
              }
            }
