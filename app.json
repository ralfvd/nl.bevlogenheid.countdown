              "placeholder": {
                "en": "Countdown timer name",
                "nl": "Zandloper naam"
              }
            },
            {
              "name": "value",
              "type": "number",
              "placeholder": {
                "en": "value",
                "nl": "waarde"
              }
            }
          ]
      },
      {
