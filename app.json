{
    "id": "nl.bevlogenheid.countdown",
    "name": {
        "en": "CountDown"
    },
    "version": "1.0.1",
    "compatibility": ">=0.8.30",
    "description" : {
	    "en" : "Use CountDown timers to control your flows",
      "nl" : "Gebruik CountDown timers als zandloper om af te tellen naar een actie in een flow"
    },
    "author": {
        "name": "Ralf van Dooren",
        "email": "ralfvd@gmail.com"
    },
"images": {
    "large": "./assets/images/large.jpg",
    "small": "./assets/images/small.jpg"
  },
  "category": [ "tools" ],
  "dependencies": { },
  "flow": {
    "triggers": [
       {
	        "id": "countdown_to_zero",
	        "title": {
	           "en": "Timer reaches zero (0)",
	          "nl": "Zandloper leeg"
	    },
	     "token": [
          {
	      "name": "variable",
	      "title": {
                 "en": "Name timer",
		              "nl": "Naam zandloper"
              }
          }
        ],
       "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "Countdown timer name",
	            "nl": "Zandloper naam"
            }
          }
         ]
       },
       {
          "id": "countdown_started",
          "title": {
	           "en": "Timer has started",
	          "nl": "Zandloper is gestart"
	         },
	        "token": [
            {
	             "name": "variable",
	              "title": {
                  "en": "Name timer",
		              "nl": "Naam zandloper"
              }
            }
          ],
          "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "Countdown timer name",
	            "nl": "Zandloper naam"
            }
          }
        ]
      },
      {
         "id": "countdown_stopped",
         "title": {
            "en": "Timer has stopped",
           "nl": "Zandloper is gestopped"
          },
         "token": [
           {
              "name": "variable",
               "title": {
                 "en": "Name timer",
                 "nl": "Naam zandloper"
             }
           }
         ],
         "args": [
         {
           "name": "variable",
           "type": "autocomplete",
           "placeholder": {
             "en": "Countdown timer name",
             "nl": "Zandloper naam"
           }
         }
       ]
     },
     {
        "id": "countdown_timer_changed",
        "title": {
           "en": "Timer value has changed",
          "nl": "Zandloper waarde is veranderd"
         },
        "token": [
          {
             "name": "variable",
              "title": {
                "en": "Name timer",
                "nl": "Naam zandloper"
            }
          },
          {
            "name": "value",
            "title": {
              "en": "value",
              "nl": "waarde"
            }
          }
        ],
        "args": [
        {
          "name": "variable",
          "type": "autocomplete",
          "placeholder": {
            "en": "Countdown timer name",
            "nl": "Zandloper naam"
          }
        }
      ]
    }
       ],
       "conditions": [
        {
        "id": "timer_running",
        "title": {
          "en": "Timer !{{not|}} running",
          "nl": "Zandloper loopt !{{niet|}}"
        },
        "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "name",
         	  "nl": "naam"
           }
          }
        ]
      },
      {
        "id": "timer_matches_number",
        "title": {
          "en": "!{{CountDown is exact|Countdown is not exactly}}",
          "nl": "!{{Zandloper is precies|Zandloper is ongelijk aan}}"
        },
        "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "CountDown name",
              "nl": "Zandloper naam"
            }
          },
          {
            "name": "value",
            "type": "number",
            "placeholder": {
              "en": "value",
              "nl": "waarde"
            }
          }
        ]
      }

       ],
       "actions": [
       {
	        "id": "set_countdown_timer",
	        "title": {
	           "en": "Start countdown timer",
             "nl": "Draai zandloper om"
           },
           "args":
           [
             {
               "name": "variable",
               "type": "autocomplete",
               "placeholder": {
                 "en": "name",
	               "nl": "naam"
               }
             },
             {
               "name": "value",
               "type": "text",
               "placeholder":
	             {
                 "en": "seconds",
	              "nl": "seconden"
               }
             }
	        ]
      },
      {
        "id": "set_random_countdown_timer",
        "title": {
          "en": "start random CountDown",
          "nl": "Zandloper met willekeurige eindtijd"
        },
          "args":
          [
           {
             "name": "variable",
             "type": "autocomplete",
             "placeholder": {
               "en": "name",
               "nl": "naam"
             }
           },
           {
             "name": "valuemin",
             "type": "text",
             "placeholder":
         {
               "en": "min. seconds",
               "nl": "min. seconden"
             }
           },
           {
             "name": "valuemax",
             "type": "text",
             "placeholder":
         {
               "en": "max. seconds",
               "nl": "max. seconden"
             }
           }
      ]
         },
        {
	 "id": "stop_countdown_timer",
        "title":
          {
           "en": "Stop countdown timer"
          },
         "args":
         [
           {
            "name": "variable",
            "type": "autocomplete",
            "placeholder":
              {
              "en": "name",
	      "nl": "naam"
              }
           }
         ]
        }
        ]
   }
}
